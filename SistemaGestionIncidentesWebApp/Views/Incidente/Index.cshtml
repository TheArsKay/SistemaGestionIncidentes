@model IEnumerable<SistemaGestionIncidentesWebApp.Models.Incidente>

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Incidentes";
}


<link rel="stylesheet" href="~/css/incidentes.css" />


<div class="card shadow-sm">
    <form>
        <div class="row">
            <div class="col-md-6">
                <label class="form-label">Estado Incidente:</label>
                <div class="d-flex">
                    <select name="idEstadoIncidente" class="form-select me-2" asp-items="@ViewBag.estadoIncidente"></select>
                    <input class="btn btn-sm btn-outline-primary" type="submit" value="Consultar" />
                </div>
            </div>
        </div>
        <br />
    </form>
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Incidentes Registrados</h5>
        <a class="btn btn-primary btn-sm" asp-controller="Incidentes" asp-action="Create">
            + Nuevo Incidente
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-dark">

        <tr>
                        <th scope="col">
                @Html.DisplayNameFor(model => model.Id)
            </th>
                        <th scope="col">
                @Html.DisplayNameFor(model => model.TituloIncidente)
            </th>
                        <th scope="col">
                @Html.DisplayNameFor(model => model.DescripcionIncidente)
            </th>
                        <th scope="col">
                @Html.DisplayNameFor(model => model.SolucionIncidente)
            </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.EstadoIncidente.NombreEstado)
                        </th>
                        <th scope="col">
                @Html.DisplayNameFor(model => model.FechaCreacion)
            </th>
                       
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TituloIncidente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionIncidente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SolucionIncidente)
            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EstadoIncidente.NombreEstado)
                            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaCreacion)
            </td>
           
            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                                @Html.ActionLink("Detalle", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                            </td>
        </tr>
}
                </tbody>
            </table>

            @if (ViewBag.totalPaginas > 2)
            {
                <p>
                    <strong>Cant. Pag.: @ViewBag.totalPaginas</strong>
                </p>

                <div class="pagination pagination-sm">
                    @for (int x = 1; x <= ViewBag.totalPaginas; x++)
                    {
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@x"
                           asp-route-numreg="@ViewBag.registroSeleccionado"
                           asp-route-idEstadoIncidente="@ViewBag.EstadoIncidenteSeleccionado">@x</a>
                    }
                </div>
            }

        </div>
    </div>
</div>
