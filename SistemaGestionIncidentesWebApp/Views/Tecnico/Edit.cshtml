@model SistemaGestionIncidentesWebApp.Models.DTOs.IncidenteTecnicoDTO

@{
    ViewData["Title"] = "Editar Incidente";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<h2>Editar incidente #@Model.Id</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label>Código</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="form-group mb-3">
        <label>Título</label>
        <input type="text" class="form-control" asp-for="TituloIncidente" readonly />
    </div>

    <div class="form-group mb-3">
        <label>Descripción</label>
        <textarea class="form-control" asp-for="DescripcionIncidente" readonly></textarea>
    </div>

    <div class="form-group mb-3">
        <label>Solución (opcional)</label>
        <textarea class="form-control" asp-for="SolucionIncidente" placeholder="Puedes dejarlo vacío si aún no hay solución"></textarea>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label>Categoría</label>
            <input type="text" class="form-control" asp-for="CategoriaNombre" readonly />
        </div>
        <div class="col-md-4 mb-3">
            <label>Estado</label>
            <select asp-for="IdEstado" class="form-control">
                <option value="1">Pendiente</option>
                <option value="2">En Proceso</option>
                <option value="3">Resuelto</option>
                <option value="4">Cerrado</option>
            </select>
        </div>
        <div class="col-md-4 mb-3">
            <label>Técnico asignado</label>
            <input type="text" class="form-control" asp-for="TecnicoNombre" readonly />
        </div>
    </div>

    <div class="form-group mb-3">
        <label>Usuario que reporta</label>
        <input type="text" class="form-control" asp-for="UsuarioNombre" readonly />
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="MisIncidentes" class="btn btn-secondary">Cancelar</a>
</form>
