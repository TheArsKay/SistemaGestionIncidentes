@model IEnumerable<SistemaGestionIncidentesWebApp.Models.IncidenteListado>

@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Listado de Incidentes";
}

<link rel="stylesheet" href="~/css/incidentes.css" />

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Incidentes Registrados</h5>
        <a class="btn btn-primary btn-sm" asp-controller="Incidentes" asp-action="Create">
            + Nuevo Incidente
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Código</th>
                        <th scope="col">Título</th>
                        <th scope="col">Usuario Reporta</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Técnico Asignado</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Codigo_Ticket</td>
                                <td>@item.Titulo_Incidente</td>
                                <td>@item.Usuario_Reporta</td>
                                <td>
                                    <span class="badge estado-@item.Estado.ToLower().Replace(" ", "")">
                                        @item.Estado
                                    </span>
                                </td>
                                <td>@item.Tecnico_Asignado</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted p-3">
                                No se encontraron incidentes.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
